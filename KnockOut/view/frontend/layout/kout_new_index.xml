<?xml version="1.0"?>

<page layout='1column' xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
        <block class="Kitchen\KnockOut\Block\Grid\ViewAbstract" before="-" cacheable="false" template="Kitchen_KnockOut::grid/knockoutview.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="sample-grid" xsi:type="array">
                                <item name="component" xsi:type="string">Kitchen_KnockOut/js/view/grid</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>